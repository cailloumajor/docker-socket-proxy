{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "semanticCommits": "enabled",
  "packageRules": [
    {
      "matchPackageNames": [
        "golang",
        "tonistiigi/xx"
      ],
      "matchManagers": [
        "dockerfile"
      ],
      "semanticCommitType": "fix"
    }
  ]
}
